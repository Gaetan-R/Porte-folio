{% extends 'base.html.twig' %}

{% block title %}Projet{% endblock %}

{% block body %}
    {% include'_header.html.twig' %}

<div class="container">
    <div class="row">
        <div class="col-md-5">
            {% if (projet.filename) %}
                <img class="align-self-start mr-3 shadow mb-5 bg-white rounded" src="{{ vich_uploader_asset(projet,'imageFile') }}" alt="{{ projet.nom }} poster">
            {% else %}
                <img class="img-project shadow mb-5 bg-white rounded" src="{{ projet.poster }}" alt="{{ projet.nom }} poster">
            {% endif %}
            <iframe class="video" src="{{ projet.video }}" width="118%" height="366" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>
            <p class="link-video"><a href="{{ projet.linkVideo }}">Lien vers la video</a> </p>

        </div>
        <div class="col-md-7">
            <div class="sum-container shadow mb-5 bg-white rounded">
            <h1 class="project-title"><span>{{ projet.nom }}</span></h1>
            <p class="project-sum">{{ projet.summary }}</p>
                <p class="project-sum-techno">Languages/Frameworks : {{ projet.technologie }}</p>
                <p class="project-date">Date de cr√©ation : {{projet.creation|date('d/m/Y')}}</p>
                <div class="project-item">
            <a class="project-icon" href="#"><img src="https://img.icons8.com/clouds/100/000000/github.png"/></a>
            <a class="project-icon" href="#"><img src="https://img.icons8.com/clouds/100/000000/web-imac.png"/></a>
            </div>
        </div>
        </div>

</div>
</div>
    {% include '_footer.html.twig' %}

{% endblock %}
