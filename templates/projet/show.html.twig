{% extends 'base.html.twig' %}

{% block title %}Projet{% endblock %}

{% block body %}
    <h1>Projet</h1>

    <section>
        <div class="row">
        <div class="img-container">
            <img src="{{projet.poster}}" alt="{{ projet.nom }} poster">

        </div>
            <div class="bloc">
                <h2>Projet <span>{{ projet.nom }}</span></h2>
                <p>{{ projet.description }}</p>
                <a href="#"><img src="https://img.icons8.com/clouds/100/000000/github.png"/></a>
            </div>
        </div>

    </section>



    <section>
            <div class="container">
                <div class="content">
                    <div class="grid">
                        <figure class="effect-bubba">
                            <img src="{{projet.poster}}" alt="{{ projet.nom }} poster">
                            <figcaption>
                                <h2>Projet <span>{{ projet.nom }}</span></h2>
                                <p>{{ projet.description }}</p>
                                <a class="buy" href="{{ path('projet_show', {id : projet.id }) }}">Voir</a>
                            </figcaption>
                        </figure>
                    </div>
                </div>
            </div>
    </section>

{% endblock %}
